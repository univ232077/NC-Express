<%- include('../fragments/header.ejs'); %>

<div class="nav-menu">
    <h2>Меню навигации</h2>
    <form action="/cart" method="get">
        <button id="basket-open-button" type="submit">
            Открыть корзину
        </button>
    </form>

</div>

<h2 class="products-header">Доступные товары:</h2>
<div class="products-menu">
    <% productCards.forEach((card) => { %>
        <form action="/cart/add/<%= card.productID %>" method="post">
            <div class="product-card">
                <img class="product-card-image" alt="img" src="../../<%=card.imageURL%>"/>
                <h3 class="product-card-name"><%= card.name %></h3>
                <p class="product-card-price"><%= card.price %> RUB</p>
                <button class="product-card-button" type="submit">
                    Добавить в корзину
                </button>
            </div>
        </form>
    <% }); %>
</div>

<%- include('../fragments/footer.ejs'); %>
