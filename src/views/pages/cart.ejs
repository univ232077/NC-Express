
<%- include("../fragments/header.ejs") %>

<div class="popup-background">
    <div class="basket-container">
        <div class="basket-header">
            <h2>Корзина</h2>
            <form action="/" method="get">
                <button class="basket-close-button" type="submit">X</button>
            </form>

        </div>
        <div class="basket-list">
            <% cartItems.forEach((item) => { %>
                <div class="basket-item">
                    <span class="basket-item-name"><%= item.name %></span>
                    <span class="basket-item-count"><%= item.amount %></span>
                    <span class="basket-item-price"><%= item.price %></span>
                    <form action="/cart/delete/<%= item.productID %>" method="post">
                        <button>X</button>
                    </form>
                </div>
            <% }); %>
        </div>
        <div class="basket-footer">
            <button class="basket-button" type="submit">
                Перейти к оплате
            </button>
        </div>
    </div>
</div>

<%- include("../fragments/footer.ejs") %>
